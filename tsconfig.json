{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ES2020"
    ],
    "noImplicitAny": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2015",
    "types": ["node", "jest"]
  },
  "include": [
    ".*",
    ".*/**/*",
    "*/**/.*",
    "**/*"
  ]
}
