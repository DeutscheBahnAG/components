{
  "extends": "@bahn-x/eslint-config-base/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "ES2020"
    ],
    "noImplicitAny": false,
    "target": "ES2015",
  },
  "include": [
    ".*",
    ".*/**/*",
    "*/**/.*",
    "**/*",
  ]
}
