{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "foundation/**/*",
    "components/**/*",
    ".cz-config.js",
    ".commitlintrc.js",
    ".eslintrc.js"
  ]
}
