{
  "name": "@bahn-x/dbx",
  "private": true,
  "version": "0.5.6",
  "description": "BahnX React components for building websites and applications fast in the look and feel of Deutsche Bahn AG",
  "main": "dist/components/index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "dev": "yarn storybook",
    "test": "CI=true jest --ci",
    "test:coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint foundation components .cz-config.js .commitlintrc.js --fix",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "build:docs": "yarn build:storybook && yarn build:sassdoc",
    "build:storybook": "build-storybook -o build",
    "build:sassdoc": "sassdoc foundation",
    "prebuild": "rimraf dist/components",
    "build:web": "babel components/web --extensions \".js,.jsx,.ts,.tsx\" --out-dir dist/web --copy-files --ignore *.stories.js,*.test.js --source-maps --config-file ./babel.config.json",
    "build:web-extra": "babel components/web-extra --extensions \".js,.jsx,.ts,.tsx\" --out-dir dist/web-extra --copy-files --ignore *.stories.js,*.test.js --source-maps --config-file ./babel.config.json",
    "build:icons": "babel components/icons --extensions \".js,.jsx,.ts,.tsx\" --out-dir dist/icons --copy-files --ignore *.stories.js,*.test.js --source-maps --config-file ./babel.config.json",
    "build": "yarn build:web && yarn build:web-extra && yarn build:icons",
    "commit": "git-cz",
    "publish-components": "node scripts/publish-components.js"
  },
  "files": [
    "components",
    "dist",
    "sass"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bahn-X/dbx-web.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/Bahn-X/dbx-web#readme",
  "bugs": {
    "url": "https://github.com/Bahn-X/dbx-web/issues"
  },
  "engines": {
    "node": ">=8.6.0",
    "yarn": ">=1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "clsx": "^1.1.1",
    "core-js": "^3.6.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "sass-to-js": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@bahn-x/dbx-foundation": ">=0.0.0",
    "@bahn-x/storybook-addon-static-html": "^0.1.5",
    "@bahn-x/webdev-configs": "^1.0.0",
    "@commitlint/cli": "^8.0.0",
    "@loadable/component": "^5.13.1",
    "@storybook/addon-a11y": "^6.0.4",
    "@storybook/addon-actions": "^6.0.4",
    "@storybook/addon-backgrounds": "^6.0.4",
    "@storybook/addon-links": "^6.0.4",
    "@storybook/addon-storyshots": "^6.0.4",
    "@storybook/addon-storyshots-puppeteer": "^6.0.4",
    "@storybook/addon-storysource": "^6.0.4",
    "@storybook/addon-viewport": "^6.0.4",
    "@storybook/react": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "autoprefixer": "^9.8.6",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chalk": "^2.4.2",
    "css-loader": "^2.1.0",
    "cz-customizable": "^6.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.6.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "globby": "^9.2.0",
    "husky": "^4.2.5",
    "import-glob-loader": "^1.1.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "lodash.mapvalues": "^4.6.0",
    "node-sass": "^4.14.1",
    "ora": "^3.4.0",
    "postcss-loader": "^3.0.0",
    "react-docgen-typescript-plugin": "^0.5.2",
    "react-test-renderer": "^16.13.1",
    "sass-loader": "^7.1.0",
    "sassdoc": "^2.7.2",
    "simple-git": "^1.113.0",
    "storybook-addon-react-docgen": "^1.2.42",
    "storybook-readme": "^5.0.8",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "workspaces": [
    "components/icons",
    "components/web",
    "components/web-extra",
    "foundation",
    "email"
  ]
}
