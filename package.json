{
  "name": "react-web-components",
  "private": true,
  "version": "0.0.0",
  "description": "DB React components for building websites and applications fast in the look and feel of Deutsche Bahn AG",
  "scripts": {
    "add-component": "yarn hygen component new",
    "postadd-component": "yarn build:react",
    "styleguidist": "styleguidist server",
    "dev": "yarn styleguidist",
    "pretest": "yarn build:react-icons",
    "test": "CI=true jest packages --ci",
    "test:dev": "jest packages --watch",
    "test:coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot",
    "prelint": "yarn build:react-icons",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .js,.ts,.tsx",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "lint:styles:fix": "yarn lint:styles --fix",
    "prebuild:docs": "yarn build:react-icons && yarn build:react && yarn build:react-extra",
    "build:docs": "yarn build:sassdoc && yarn build:styleguidist",
    "build": "yarn build:react-icons && yarn build:react && yarn build:react-extra",
    "build:styleguidist": "styleguidist build",
    "build:sassdoc": "sassdoc packages/styles",
    "build:react-icons": "yarn workspace @db-design/react-icons build",
    "build:react": "yarn workspace @db-design/react build",
    "build:react-extra": "yarn workspace @db-design/react-extra build",
    "release:styles": "yarn workspace @db-design/styles release-it --disable-metrics",
    "release:react-icons": "yarn build:react-icons && yarn workspace @db-design/react-icons release-it --disable-metrics",
    "release:react": "yarn build:react-icons && yarn build:react && yarn workspace @db-design/react release-it --disable-metrics",
    "release:react-extra": "yarn workspace @db-design/react-extra release-it --disable-metrics",
    "commit": "git-cz",
    "postinstall": "node scripts/postinstall.js"
  },
  "repository": {
    "type": "git",
    "url": "git@ssh.git.tech.rz.db.de:bahn-x/webdev/web.git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://git.tech.rz.db.de/bahn-x/webdev/web#readme",
  "bugs": {
    "url": "https://git.tech.rz.db.de/bahn-x/webdev/web/-/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "jest --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-styleguidist": "^11.1.7"
  },
  "devDependencies": {
    "@bahn-x/eslint-config-base": "^2.0.1",
    "@commitlint/cli": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "autoprefixer": "^10.2.1",
    "css-loader": "^5.0.1",
    "cz-customizable": "^6.3.0",
    "esbuild": "^0.14.11",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "husky": "^4.3.7",
    "hygen": "^6.1.0",
    "import-glob-loader": "^1.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.3",
    "postcss-loader": "^4.1.0",
    "react-docgen-typescript-plugin": "^0.7.0",
    "react-test-renderer": "^17.0.1",
    "replace-in-file": "^6.2.0",
    "sass": "^1.34.0",
    "sass-loader": "^10.1.0",
    "sassdoc": "^2.7.3",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "browserslist": "^4.16.5",
    "chokidar": "^3",
    "colors": "0.6.2",
    "immer": "^9.0.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
