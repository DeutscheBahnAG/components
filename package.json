{
  "name": "@bahn-x/dbx",
  "private": true,
  "version": "0.5.6",
  "description": "BahnX React components for building websites and applications fast in the look and feel of Deutsche Bahn AG",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "styleguidist": "styleguidist server",
    "dev": "yarn styleguidist",
    "pretest": "yarn build:icons",
    "test": "CI=true jest --ci",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot",
    "prelint": "yarn build:icons",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "prebuild:docs": "yarn build:icons && yarn build:web",
    "build:docs": "yarn build:storybook && yarn build:sassdoc && yarn build:styleguidist",
    "build:storybook": "build-storybook -o build",
    "build:styleguidist": "styleguidist build",
    "build:sassdoc": "sassdoc packages/dbx-foundation",
    "prebuild": "rm -rf dist",
    "build:web": "yarn workspace @bahn-x/dbx-web build",
    "release:web": "yarn build:icons && yarn build:web && yarn workspace @bahn-x/dbx-web release-it --disable-metrics",
    "build:web-extra": "babel packages/dbx-web-extra --extensions \".js,.jsx\" --out-dir dist/web-extra --copy-files --ignore *.stories.js,*.test.js --source-maps --config-file ./babel.config.json",
    "build:icons": "yarn workspace @bahn-x/dbx-icons build",
    "release:icons": "yarn build:icons && yarn workspace @bahn-x/dbx-icons release-it --disable-metrics",
    "build": "yarn build:icons && yarn build:web && yarn build:web-extra",
    "commit": "git-cz",
    "publish-components": "node scripts/publish-components.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bahn-X/dbx-web.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/Bahn-X/dbx-web#readme",
  "bugs": {
    "url": "https://github.com/Bahn-X/dbx-web/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "clsx": "^1.1.1",
    "core-js": "^3.8.2",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-styleguidist": "^11.1.5",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@bahn-x/eslint-config-base": "^2.0.1",
    "@bahn-x/storybook-addon-static-html": "^0.1.5",
    "@bahn-x/webdev-configs": "^2.0.0",
    "@commitlint/cli": "^11.0.0",
    "@loadable/component": "^5.14.1",
    "@storybook/addon-a11y": "^6.1.11",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-backgrounds": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/addon-storyshots": "^6.1.11",
    "@storybook/addon-storyshots-puppeteer": "^6.1.11",
    "@storybook/addon-storysource": "^6.1.11",
    "@storybook/addon-viewport": "^6.1.11",
    "@storybook/addons": "^6.1.11",
    "@storybook/components": "^6.1.11",
    "@storybook/core-events": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@storybook/theming": "^6.1.11",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@types/enzyme": "^3.10.8",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "autoprefixer": "^10.2.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chalk": "^4.1.0",
    "css-loader": "^5.0.1",
    "cz-customizable": "^6.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^9.0.1",
    "globby": "^11.0.2",
    "husky": "^4.3.7",
    "import-glob-loader": "^1.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "node-sass": "^5.0.0",
    "ora": "^5.2.0",
    "postcss": "^8.2.3",
    "postcss-loader": "^4.1.0",
    "puppeteer": "^5.5.0",
    "react-docgen-typescript-plugin": "^0.7.0",
    "react-test-renderer": "^16.13.1",
    "release-it": "^14.2.2",
    "sass-loader": "^10.1.0",
    "sassdoc": "^2.7.3",
    "semver": "^7.3.4",
    "simple-git": "^1.113.0",
    "storybook-addon-react-docgen": "^1.2.42",
    "storybook-readme": "^5.0.9",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "resolutions": {
    "chokidar": "^3",
    "react-dev-utils": "^11",
    "@types/react": "^16"
  },
  "workspaces": [
    "packages/*"
  ]
}
