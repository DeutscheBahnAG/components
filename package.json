{
  "name": "@bahn-x/dbx",
  "private": true,
  "version": "0.5.6",
  "description": "DBX, the Bahn X design system, implemented for the web",
  "main": "dist/components/index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "dev": "yarn storybook",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint foundation components .cz-config.js .commitlintrc.js --fix",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "build:docs": "yarn build:storybook && yarn build:sassdoc",
    "build:storybook": "build-storybook -o build",
    "build:sassdoc": "sassdoc foundation",
    "prebuild": "rimraf dist/components",
    "build": "babel components --out-dir dist/components --copy-files --ignore *.stories.js,*.test.js --source-maps --config-file ./.babelrc",
    "commit": "git-cz",
    "publish-components": "node scripts/publish-components.js"
  },
  "files": [
    "components",
    "dist",
    "sass"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bahn-X/dbx-web.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/Bahn-X/dbx-web#readme",
  "bugs": {
    "url": "https://github.com/Bahn-X/dbx-web/issues"
  },
  "engines": {
    "node": ">=8.6.0",
    "yarn": ">=1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "clsx": "^1.0.3",
    "core-js": "^3.6.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "rimraf": "^2.6.3",
    "sass-to-js": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "@bahn-x/dbx-foundation": ">=0.0.0",
    "@bahn-x/storybook-addon-static-html": "^0.1.2",
    "@bahn-x/webdev-configs": "^1.0.0",
    "@commitlint/cli": "^8.0.0",
    "@loadable/component": "^5.12.0",
    "@storybook/addon-a11y": "^5.1.11",
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-backgrounds": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/addon-storyshots": "^5.1.11",
    "@storybook/addon-storyshots-puppeteer": "^5.1.11",
    "@storybook/addon-storysource": "^5.1.11",
    "@storybook/addon-viewport": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "autoprefixer": "^9.4.7",
    "babel-loader": "^8.0.5",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chalk": "^2.4.2",
    "css-loader": "^2.1.0",
    "cz-customizable": "^6.2.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.13.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^8.1.0",
    "globby": "^9.2.0",
    "husky": "^2.4.0",
    "import-glob-loader": "^1.1.0",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.3",
    "lodash.mapvalues": "^4.6.0",
    "node-sass": "^4.11.0",
    "ora": "^3.4.0",
    "postcss-loader": "^3.0.0",
    "react-test-renderer": "^16.8.1",
    "sass-loader": "^7.1.0",
    "sassdoc": "^2.5.1",
    "simple-git": "^1.113.0",
    "storybook-addon-react-docgen": "^1.2.6",
    "storybook-readme": "^5.0.8",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-sass-guidelines": "^6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "workspaces": [
    "components/*",
    "foundation",
    "email"
  ]
}
