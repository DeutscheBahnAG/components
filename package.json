{
  "name": "react-web-components",
  "private": true,
  "version": "0.5.6",
  "description": "BahnX React components for building websites and applications fast in the look and feel of Deutsche Bahn AG",
  "scripts": {
    "styleguidist": "styleguidist server",
    "dev": "yarn styleguidist",
    "pretest": "yarn build:icons",
    "test": "CI=true jest --ci",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot",
    "prelint": "yarn build:icons",
    "lint": "yarn lint:js && yarn lint:styles",
    "lint:js": "eslint . --ext .js,.ts,.jsx,.tsx",
    "lint:js:fix": "yarn lint:js --fix",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "lint:styles:fix": "yarn lint:styles --fix",
    "prebuild:docs": "yarn build:icons && yarn build:web && yarn build:web-extra && yarn build:email-kit",
    "build:docs": "yarn build:sassdoc && yarn build:styleguidist",
    "build": "yarn build:icons && yarn build:web && yarn build:web-extra",
    "build:styleguidist": "styleguidist build",
    "build:sassdoc": "sassdoc packages/dbx-foundation",
    "build:email-kit": "yarn workspace @bahn-x/dbx-email-kit build",
    "build:icons": "yarn workspace @bahn-x/dbx-icons build",
    "build:web": "yarn workspace @bahn-x/dbx-web build",
    "build:web-extra": "yarn workspace @bahn-x/dbx-web-extra build",
    "release:email-kit": "build:email-kit && yarn workspace @bahn-x/dbx-email-kit release-it --disable-metrics",
    "release:foundation": "yarn workspace @bahn-x/dbx-foundation release-it --disable-metrics",
    "release:icons": "yarn build:icons && yarn workspace @bahn-x/dbx-icons release-it --disable-metrics",
    "release:web": "yarn build:icons && yarn build:web && yarn workspace @bahn-x/dbx-web release-it --disable-metrics",
    "release:web-extra": "yarn workspace @bahn-x/dbx-web-extra release-it --disable-metrics",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bahn-X/dbx-web.git"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://git.tech.rz.db.de/bahn-x/webdev/web#readme",
  "bugs": {
    "url": "https://git.tech.rz.db.de/bahn-x/webdev/web/-/issues"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "clsx": "^1.1.1",
    "core-js": "^3.8.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-styleguidist": "^11.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.12.7",
    "@bahn-x/eslint-config-base": "^2.0.1",
    "@bahn-x/webdev-configs": "^2.0.0",
    "@commitlint/cli": "^11.0.0",
    "@loadable/component": "^5.14.1",
    "@testing-library/dom": "^7.29.6",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.7.3",
    "@types/enzyme": "^3.10.8",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "autoprefixer": "^10.2.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "css-loader": "^5.0.1",
    "cz-customizable": "^6.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "import-glob-loader": "^1.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.3",
    "postcss-loader": "^4.1.0",
    "react-docgen-typescript-plugin": "^0.7.0",
    "react-test-renderer": "^17.0.1",
    "sass": "^1.34.0",
    "sass-loader": "^10.1.0",
    "sassdoc": "^2.7.3",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.12.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "resolutions": {
    "chokidar": "^3",
    "react-dev-utils": "^11",
    "@types/react": "^16"
  },
  "workspaces": [
    "packages/*"
  ]
}
