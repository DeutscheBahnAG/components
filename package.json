{
  "name": "@bahn-x/dbx",
  "private": true,
  "version": "0.5.6",
  "description": "BahnX React components for building websites and applications fast in the look and feel of Deutsche Bahn AG",
  "main": "dist/components/index.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "styleguidist": "styleguidist server",
    "dev": "yarn styleguidist",
    "pretest": "yarn build:icons",
    "test": "CI=true jest --ci",
    "test:dev": "jest --watch",
    "test:coverage": "jest --coverage",
    "update-snapshots": "jest --updateSnapshot",
    "lint": "yarn lint:js && yarn lint:styles",
    "prelint:js": "yarn build:icons",
    "lint:js": "eslint foundation components .cz-config.js .commitlintrc.js --ext .js,.ts,.jsx,.tsx --fix",
    "lint:styles": "stylelint \"**/*.scss\" --fix",
    "prebuild:docs": "yarn build:icons",
    "build:docs": "yarn build:storybook && yarn build:sassdoc && yarn build:styleguidist",
    "build:storybook": "build-storybook -o build",
    "build:styleguidist": "styleguidist build",
    "build:sassdoc": "sassdoc foundation",
    "prebuild": "rm -rf dist",
    "build:web": "rm -rf components/web/dist && tsc --project tsconfig.build.web.json --outDir components/web/dist",
    "release:web": "yarn build:icons && yarn build:web && yarn workspace @bahn-x/dbx-web release-it --disable-metrics",
    "build:web-extra": "babel components/web-extra --extensions \".js,.jsx\" --out-dir dist/web-extra --copy-files --ignore *.stories.js,*.test.js --source-maps --config-file ./babel.config.json",
    "build:icons": "yarn workspace @bahn-x/dbx-icons build",
    "release:icons": "yarn build:icons && yarn workspace @bahn-x/dbx-icons release-it --disable-metrics",
    "build": "yarn build:icons && yarn build:web && yarn build:web-extra",
    "commit": "git-cz",
    "publish-components": "node scripts/publish-components.js"
  },
  "files": [
    "components",
    "dist",
    "sass"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Bahn-X/dbx-web.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/Bahn-X/dbx-web#readme",
  "bugs": {
    "url": "https://github.com/Bahn-X/dbx-web/issues"
  },
  "engines": {
    "node": ">=8.6.0",
    "yarn": ">=1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add",
      "jest --findRelatedTests"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "clsx": "^1.1.1",
    "core-js": "^3.6.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-styleguidist": "^11.0.8",
    "rimraf": "^3.0.2",
    "sass-to-js": "^1.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@bahn-x/dbx-foundation": ">=0.0.0",
    "@bahn-x/dbx-web": ">=0.0.0",
    "@bahn-x/eslint-config-base": "^2.0.1",
    "@bahn-x/storybook-addon-static-html": "^0.1.5",
    "@bahn-x/webdev-configs": "^2.0.0",
    "@commitlint/cli": "^8.0.0",
    "@loadable/component": "^5.13.1",
    "@storybook/addon-a11y": "^6.0.4",
    "@storybook/addon-actions": "^6.0.4",
    "@storybook/addon-backgrounds": "^6.0.4",
    "@storybook/addon-links": "^6.0.4",
    "@storybook/addon-storyshots": "^6.0.4",
    "@storybook/addon-storyshots-puppeteer": "^6.0.4",
    "@storybook/addon-storysource": "^6.0.4",
    "@storybook/addon-viewport": "^6.0.4",
    "@storybook/react": "^6.0.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/enzyme": "^3.10.7",
    "@types/react": "^16.9.51",
    "@types/react-dom": "^16.9.8",
    "autoprefixer": "^9.8.6",
    "babel-jest": "^26.2.2",
    "babel-loader": "^8.1.0",
    "babel-plugin-replace-ts-export-assignment": "^0.0.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chalk": "^2.4.2",
    "css-loader": "^2.1.0",
    "cz-customizable": "^6.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.10.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "fs-extra": "^9.0.1",
    "globby": "^9.2.0",
    "husky": "^4.2.5",
    "import-glob-loader": "^1.1.0",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "lodash.mapvalues": "^4.6.0",
    "node-sass": "^4.14.1",
    "ora": "^3.4.0",
    "postcss-loader": "^3.0.0",
    "react-docgen-typescript-plugin": "^0.5.2",
    "react-test-renderer": "^16.13.1",
    "release-it": "^14.0.4",
    "sass-loader": "^7.1.0",
    "sassdoc": "^2.7.2",
    "simple-git": "^1.113.0",
    "storybook-addon-react-docgen": "^1.2.42",
    "storybook-readme": "^5.0.8",
    "style-loader": "^1.2.1",
    "stylelint": "^13.6.1",
    "ts-loader": "^8.0.3",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "workspaces": [
    "components/icons",
    "components/web",
    "components/web-extra",
    "foundation",
    "email"
  ]
}
